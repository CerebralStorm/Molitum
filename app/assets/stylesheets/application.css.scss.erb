// Container
#main {
  background: #FFF;
  margin: 0 auto;
  padding: 10px;
  float: none; 
  min-height: 100% !important;
  height: 100% !important;
  h1 {
    font-size: 500%;
  }
}

#logo {
  padding-top: 10px;
  width: 360px;
}

#sublogo {
  padding-top:10px;
}



#main_navbar {
  margin-top: 75px; 
}

body { 
  padding-top: 5px;
  background: url('<%= asset_path 'texture2.png' %>')
}

#header-signin-outer {
  margin-top: 10px;
  height: 40px;
  position: relative;
  float: right;
}

#header-signin-inner {
  height: 30px;
}

#header-search-outer {
  height: 20px;
  position: relative;
  float: right;
}

#recommend {
  margin-top: 30px;
  padding-bottom: 20px;
}

#facebook-recommend {
  padding: 3px;
}

#twitter-recommend {
  padding: 3px;
}

#linkedin-recommend {
 padding: 3px; 
}

#google-recommend {
  padding: 3px;
}

//footer
footer {
  margin-top:20px;
  border-top: 1px solid #999;
  color: #999;
}

footer a {
  color: #555;
}  

footer a:hover { 
  color: #222;
}

footer small {
  float: left;
  margin-left: 20px;
}

footer ul {
  padding-right: 20px;
  float: right;
  list-style: none;
}

footer ul li {
  float: left;
  margin-left: 10px;
}