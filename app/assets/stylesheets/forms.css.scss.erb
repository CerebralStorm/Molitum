/* === Remove input autofocus webkit === */
*:focus {outline: none;}

/* === Form Typography === */
.help-block, .required_notification {font-size: 11px;}
 
.simple_form li:first-child {
  border-bottom:1px solid #777;
}

/* === Form Header === */
.simple_form h2 {
  margin:0;
  display: inline;
}
.required_notification {
  color:#d45252; 
  margin:5px 0 0 0; 
  display:inline;
  float:right;
}

/* === Form Elements === */
.simple_form label {
  width:150px;
  margin-top: 3px;
  display:inline-block;
  float:left;
  padding:3px;
}
.simple_form input {
  height:20px; 
  width:220px; 
  padding:5px 8px;
}
.simple_form textarea {padding:8px; width:300px;}
.simple_form button {margin-left:136px;}

  /* form element visual styles */
  .simple_form input, .simple_form textarea { 
    border:1px solid #aaa;
    box-shadow: 0px 0px 3px #ccc, 0 10px 15px #eee inset;
    border-radius:2px;
    padding-right:30px;
    -moz-transition: padding .25s; 
    -webkit-transition: padding .25s; 
    -o-transition: padding .25s;
    transition: padding .25s;
  }
  .simple_form input:focus, .simple_form textarea:focus {
    background: #fff; 
    border:1px solid #555; 
    box-shadow: 0 0 3px #aaa; 
    padding-right:70px;
  }

/* === HTML5 validation styles === */ 
.simple_form input:required, .simple_form textarea:required {
  background: #fff url('<%= asset_path 'red_asterisk.png' %>') no-repeat 98% center;
}
.simple_form input:required:valid, .simple_form textarea:required:valid {
  background: #fff url('<%= asset_path 'valid.png' %>') no-repeat 98% center;
  box-shadow: 0 0 5px #5cd053;
  border-color: #28921f;
}
.simple_form input:focus:invalid, .simple_form textarea:focus:invalid {
  background: #fff url('<%= asset_path 'invalid.png' %>') no-repeat 98% center;
  box-shadow: 0 0 5px #d45252;
  border-color: #b03535
}

/* === Form hints === */
.help-block {
  background: #d45252;
  border-radius: 3px 3px 3px 3px;
  color: white;
  margin-left:8px;
  padding: 1px 6px;
  z-index: 999; /* hints stay above all other elements */
  position: absolute; /* allows proper formatting if hint is two lines */
  display: none;
}
.help-block::before {
  content: "\25C0";
  color:#d45252;
  position: absolute;
  top:1px;
  left:-6px;
}
.simple_form input:focus + .help-block {display: inline;}
.simple_form input:required:valid + .help-block {background: #28921f;}
.simple_form input:required:valid + .help-block::before {color:#28921f;}

