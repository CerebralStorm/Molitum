<!DOCTYPE html>
<html>
<head>
  <title>Molitum | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %> 
</head>
<body>
    <div id="main" class="container span10 round" >
      <%= render 'layouts/header' %>
      <div class="row-fluid">
        <%= render 'layouts/sidebar1' %>
        <div class=<%= user_signed_in? ? "span8" : "span10" %> >
          <%= render 'layouts/alert' %>
          <%= yield %>
        </div>
        <% if user_signed_in? %>
          <%= render 'layouts/sidebar2' %>
        <% end %>
      </div>
    </div> 
  <div class="navbar navbar-bottom center span10">
    <%= render 'layouts/footer' %> 
  </div>
</body>
</html>
