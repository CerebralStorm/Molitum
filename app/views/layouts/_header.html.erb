<div id="logo" class="pull-left">
<%= image_tag "logo.png" %>
</div>
<% unless user_signed_in? %>
  <div id="header-signin-outer">
    <div id="header-signin-inner">
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
<div id="main_navbar" class="navbar shadow">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav pull-left">
        <li class="brand"><%= yield(:title) %></a></li>
        <li class="divider-vertical"></li>
      </ul>
      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <li class="divider-vertical"></li>
          <ul class="nav nav-pills">
            <li class="dropdown" id="menu1">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">Settings</i>
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
            <li><%= link_to(edit_user_path(current_user)) do %><span><i class="icon-cog"></i>Account Settings</span><% end %></li>
            <li><%= link_to(edit_company_path(current_user.company)) do %><span><i class="icon-cog"></i>Company Settings</span><% end %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>