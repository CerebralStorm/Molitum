<div id="logo" class="pull-left">
<h1>Molitum</h1>
<div id="sublogo"><h6>Useful Solutions for General Contractors</h6></div>
</div>
<% unless user_signed_in? %>
  <div id="header-signin-outer">
    <div id="header-signin-inner" class="blue-gradient border round">
      <form action="/users/sign_in" class="form-inline" method="post">
        <label class="control-label" for="user_email">Username</label>
        <input class="input-small simple_form" id="user_username" name="user[username]" size="50" type="text" required />
        <label class="control-label" for="user_password">Password</label>
        <input class="input-small simple_form" id="user_password" name="user[password]" size="50" type="password" required />
        <input name="user[remember_me]" type="hidden" value="0" />
        <input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
        <label id="user_remember_me_label"class="control-label" for="user_remember_me">Remember me</label>
        <button class="btn" name="commit" type="submit" value="Sign in" />Sign In</button>
      </form>
    </div>
  </div>
<% end %>
<div id="main_navbar" class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <ul class="nav pull-left">
        <li class="brand"><%= yield(:title) %></a></li>
        <li class="divider-vertical"></li>
      </ul>
      <ul class="nav pull-right">
        <li>  
          <div id="header-search-outer">
              <form class="form-search">
                <input type="text" class="input-medium search-query">
                <button type="submit" class="btn">Search</button>
              </form>
          </div>
        </li>
        <% if user_signed_in? %>
          <li class="divider-vertical"></li>
          <ul class="nav nav-pills">
            <li class="dropdown" id="menu1">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">Settings</i>
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
            <li><%= link_to(edit_user_path(current_user)) do %><span><i class="icon-cog"></i>Account Settings</span><% end %></li>
            <li><%= link_to(edit_company_path(current_user.company)) do %><span><i class="icon-cog"></i>Company Settings</span><% end %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>