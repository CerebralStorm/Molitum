<div class="span10 border round">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), 
                    :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
<h2 class="offset1">Sign Up</h2></br>

  <div class="control-group">
      <%= f.input :name, autofocus: true, :label_html => { :class => 'control-label' }, :input_html => { :class => 'input-xlarge' } %>
  </div>
  <div class="control-group">
      <%= f.input :email, :label_html => { :class => 'control-label' }, :input_html => { :class => 'span2' } %>
  </div>
  <div class="control-group">
      <%= f.input :admin, label: "Owner?", :as => :radio_buttons, :html => { :class => 'inline' } %>
  </div>
  <div class="control-group">
      <%= f.input :password, :label_html => { :class => 'control-label' }, :input_html => { :class => 'input-xlarge' } %>
  </div>
  <div class="control-group">
      <%= f.input :password_confirmation, label: "Confirmation", :label_html => { :class => 'control-label' }, 
                  :input_html => { :class => 'input-xlarge' } %>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Save</button>
    <button class="btn">Cancel</button>
  </div>

<% end %>

</div>
