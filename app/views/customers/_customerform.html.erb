<% provide(:title, "Customer Setup") %>
<div class="row-fluid">

<div class="span8 form-highlight round padding2">
  <h2>Customer Setup</h2>
  <div class="line"></div>
  <span class="required_notification">* Denotes Required Field</span>
  </br>
  <%= simple_form_for(@customer) do |f| %>
    <%= f.error_notification %>
    <%= f.input :name, required: false, input_html: { required: "required"} %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :phone %>
    <%= f.button :submit, class: "submit btn btn-large btn-primary"%>
  <% end %>
</div>

<div class="span4 border round highlight ">
  <h2>Customer Information</h2>
  <h6>Details</h6>
  </br>
  <h3>Note:</h3>
  <p>The information you are entering here will help you to generate invoices and bids with ease.</p>
</div>

</div>