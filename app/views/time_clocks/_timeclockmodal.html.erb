<script>
  $(document).ready(function() {
    $('#add_time_clock').bind('show');
    });
  function closeDialog () {
    $('#add_time_clock').modal('hide'); 
    };
</script>

    <div class="modal hide fade" id="add_time_clock">
      <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">&times;</a>
        <h3>Record a Shift</h3>
      </div>
      <div class="modal-body">
        <table id="time_clocks_form" class="table table-bordered table-condensed">
          <%= simple_form_for TimeClock.new do |f| %>
          <tr>
            <td>
              <%= f.label :job, "Select Job" %>
              <%= f.grouped_collection_select :job_id, Customer.order(:name), :jobs, :name, :id, :location, include_blank: false %>
            </td>
            <td><%= f.input :hours, :required => false %></td>
            <td id="time_clock_date"><%= f.input :work_date %></td> 
          </tr>        
          <tr>
            <td colspan="3"><%= f.button :submit, class: "btn-primary" %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-primary" onclick="closeDialog ();">OK</a>
        </div>
      </div>
    <div class="divButton">
      <a data-toggle="modal" href="#add_time_clock" class="btn btn-primary">Record a Shift</a>
    </div>
